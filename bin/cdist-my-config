# This file massages some ENV vars to meet my needs

# Fail if something bogus is going on
set -u

case "$__cdist_target_host" in
    *.compute-1.amazonaws.com)
        __cdist_remote_user="ubuntu"
        export __cdist_remote_sudo="sudo"

    ;;
esac

