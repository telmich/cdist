# Set the system-wide default locale
#

locale="$(cat "$__object/parameter/locale")"
pattern="$(sed s/-//g "$__object/parameter/locale")"
os="$(cat "$__global/explorer/os")"

if ! locale -a | grep -q -i "$pattern"; then
    case "$os" in
        debian|ubuntu)
            echo locale-gen "$locale"
        ;;
        archlinux)
            echo locale-gen
        ;;
        *)
            echo "Sorry, do not know how to generate the locale $locale on os: $os" >&2
            echo "Please edit the type ${__type##*/} to fix this." >&2
            exit 1
        ;;
    esac
fi

case "$os" in
    debian|ubuntu)
        echo update-locale LANG="$locale"
    ;;
    archlinux)
        echo localectl set-locale LANG="$locale"
    ;;
    *)
        echo "Sorry, do not know how to setup the default locale on os: $os" >&2
        echo "Please edit the type ${__type##*/} to fix this." >&2
        exit 1
    ;;
esac
